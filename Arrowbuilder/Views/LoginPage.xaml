<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Arrowbuilder.ViewModels"
             x:Class="Arrowbuilder.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Primary}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <!-- Logo/Header -->
            <Label Text="🏹" FontSize="80" HorizontalOptions="Center"/>
            <Label Text="ArrowBuilder" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"/>
            <Label Text="Willkommen zurück!" 
                   FontSize="18" 
                   HorizontalOptions="Center"
                   TextColor="White"
                   Margin="0,0,0,30"/>

            <!-- Login Form -->
            <Border StrokeThickness="0" 
                    BackgroundColor="White" 
                    Padding="20"
                    StrokeShape="RoundRectangle 15">
                <VerticalStackLayout Spacing="15">

                    <Label Text="Email" FontAttributes="Bold"/>
                    <Entry Text="{Binding Email}" 
                           Placeholder="beispiel@email.com"
                           Keyboard="Email"
                           ReturnType="Next"/>

                    <Label Text="Passwort" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Entry Text="{Binding Password}" 
                           Placeholder="Passwort eingeben"
                           IsPassword="True"
                           ReturnType="Done"/>

                    <!-- Error Message -->
                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="Red"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                           FontSize="12"/>

                    <!-- Login Button -->
                    <Button Text="Anmelden" 
                            Command="{Binding LoginCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0"
                            HeightRequest="50"
                            CornerRadius="10"/>

                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                     IsVisible="{Binding IsBusy}"
                                     Color="{StaticResource Primary}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Register Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Noch kein Konto?" TextColor="White"/>
                <Label Text="Registrieren" 
                       TextColor="White"
                       FontAttributes="Bold"
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToRegisterCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>